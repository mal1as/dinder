<!DOCTYPE html>
<html lang="en">
<head>
    <title>Main page</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
          integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/common.css" type="text/css">
</head>
<body>
<%- include("partial/header.ejs") %>

<div id="main-content">
    <div>
        <h1>Best variants for you</h1>
    </div>

    <% if(users) { %>
        <div class="container text-center text-light">
            <% for(let i = 0; i < users.length; i++) { %>
                <% if(i % 3 === 0) { %>
                <div class="row">
                    <% } %>
                    <div class="col mx-4 my-2 bg-dark rounded" id="<%= users[i].nickname %>">
                        <img class="mt-2 rounded" src="<%= users[i].avatar %>" alt="user avatar"
                             width="200"
                             height="200">
                        <p class="my-1"><%= users[i].firstName + " " + users[i].lastName %></p>
                        <p class="my-1"><%= users[i].age + " years old" %></p>
                        <p class="my-1"><%= users[i].city + ", " + users[i].country %></p>
                    </div>
                    <% if(i % 3 === 2){ %>
                </div>
                <% } %>
            <% } %>

            <% for(let i = 0; i < 3 - users.length % 3; i++){ %>
                <div class="col mx-4 my-2 bg-dark rounded" style="visibility: hidden">
                </div>
            <% } %>
            <% if(users.length % 3 !== 0){ %>
        </div>
    <% }} %>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="/javascripts/common/header.js"></script>
<script src="/javascripts/index.js"></script>
</body>
</html>
